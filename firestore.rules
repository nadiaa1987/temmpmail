rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Emails collection
    match /emails/{emailId} {
      // Users can read emails sent to their temporary addresses
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      // Only the system (Firebase Admin) should usually write, 
      // but for certain types of interactions we allow user writes if they own it
      allow write: if isSignedIn() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // Domains collection
    match /domains/{domainId} {
      allow read: if true; // Public can see active domains to choose from
      allow write: if isAdmin();
    }

    // Analytics collection
    match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Admins (Internal list)
    match /admins/{adminId} {
      allow read: if isSignedIn();
      allow write: if false; // Only manageable via Firebase Console or special script
    }
  }
}
